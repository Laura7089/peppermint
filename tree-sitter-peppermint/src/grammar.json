{
  "name": "peppermint",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_object"
      }
    },
    "_object": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "statement"
        },
        {
          "type": "SYMBOL",
          "name": "_whitespace"
        },
        {
          "type": "SYMBOL",
          "name": "comment"
        }
      ]
    },
    "_whitespace": {
      "type": "PATTERN",
      "value": "[ \\t\\n]+"
    },
    "statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "label"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "instruction"
            },
            {
              "type": "SYMBOL",
              "name": "literal"
            }
          ]
        }
      ]
    },
    "comment": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": ";"
            },
            {
              "type": "STRING",
              "value": "#"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "_comment_text"
        }
      ]
    },
    "_comment_text": {
      "type": "PATTERN",
      "value": "[^\\n]*"
    },
    "instruction": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "opcode"
        },
        {
          "type": "SYMBOL",
          "name": "_whitespace"
        },
        {
          "type": "SYMBOL",
          "name": "operand"
        }
      ]
    },
    "opcode": {
      "type": "PATTERN",
      "value": "[a-zA-Z]+"
    },
    "operand": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "label_jump"
        },
        {
          "type": "SYMBOL",
          "name": "address"
        }
      ]
    },
    "literal": {
      "type": "SYMBOL",
      "name": "_number"
    },
    "address": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "["
        },
        {
          "type": "SYMBOL",
          "name": "_number"
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "_number": {
      "type": "PATTERN",
      "value": "(0[xb])?[0-9a-fA-F]+"
    },
    "label": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "_label_name"
        },
        {
          "type": "STRING",
          "value": ":"
        }
      ]
    },
    "label_jump": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": ":"
        },
        {
          "type": "SYMBOL",
          "name": "_label_name"
        }
      ]
    },
    "_label_name": {
      "type": "PATTERN",
      "value": "[a-zA-Z][a-zA-Z0-9\\-_]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
